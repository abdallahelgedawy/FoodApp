<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.view.SearchActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/foreground_design"
        android:scaleType="centerCrop"
        android:src="@drawable/ten"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="16dp" />
    <Button
        android:id="@+id/btn_country"
        android:layout_width="416dp"
        android:layout_height="69dp"
        android:layout_marginBottom="129dp"
        android:text="Search by Country"
        app:layout_constraintBottom_toTopOf="@+id/btn_category"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_category"
        android:layout_width="410dp"
        android:layout_height="68dp"
        android:layout_marginBottom="129dp"
        android:text="Search by Category"
        app:layout_constraintBottom_toTopOf="@+id/btn_ingredients"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ingredients"
        android:layout_width="411dp"
        android:layout_height="61dp"
        android:layout_marginBottom="113dp"
        android:text="Search By Ingredients"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>